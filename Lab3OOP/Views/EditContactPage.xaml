<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab3OOP.Views.EditContactPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="ПІБ:" FontSize="12" TextColor="Gray"/>
            <Entry x:Name="NameEntry" Text="{Binding UI_FullName, Mode=TwoWay}" Placeholder="Введіть ПІБ" />

            <Label Text="Факультет:" FontSize="12" TextColor="Gray"/>
            <Entry x:Name="FacEntry" Text="{Binding UI_Faculty, Mode=TwoWay}" Placeholder="Факультет" />

            <Label Text="Кафедра:" FontSize="12" TextColor="Gray"/>
            <Entry x:Name="DepEntry" Text="{Binding UI_Department, Mode=TwoWay}" Placeholder="Кафедра" />

            <Label Text="Спеціальність:" FontSize="12" TextColor="Gray"/>
            <Entry x:Name="SpecEntry" Text="{Binding UI_Specialty, Mode=TwoWay}" Placeholder="Спеціальність" />

            <Label Text="Співпраця:" FontSize="12" TextColor="Gray"/>
            <Entry x:Name="CollabEntry" Text="{Binding UI_Collaboration, Mode=TwoWay}" Placeholder="Вид співпраці" />

            <Label Text="Час:" FontSize="12" TextColor="Gray"/>
            <Entry x:Name="TimeEntry" Text="{Binding UI_TimeFrame, Mode=TwoWay}" Placeholder="Часові рамки" />

            <Button Text="Зберегти" Clicked="OnSaveClicked" Margin="0,20,0,0" BackgroundColor="#512BD4" TextColor="White"/>
            <Button Text="Скасувати" Command="{Binding CancelCommand}" BackgroundColor="Red" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>